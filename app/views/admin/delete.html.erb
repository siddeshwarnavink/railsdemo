<%= turbo_frame_tag "modal" do %>
  <div class="modal" id="bsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_with(url: delete_confirm_path, method: :post) do |form| %>
          <div class="modal-header">
            <h5 class="modal-title">Edit Product</h5>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this product?
          </div>
          <div class="modal-footer">
            <%= form.submit "Yes, Delete", onclick: 'BS_MODAL.hide()', class: "btn btn-danger" %>
            <%= link_to "Cancel", nil, onclick: 'BS_MODAL.hide()', class: "btn", data: {
              controller: "modals",
              action: "modals#close"
            } %>
          </div>
        <% end %>
      </div>
    </div>
    <script>
        window.BS_MODAL = new bootstrap.Modal("#bsModal");
        BS_MODAL.show();
    </script>
<% end %>